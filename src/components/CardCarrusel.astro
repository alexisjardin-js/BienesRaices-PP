---
const { propiedad } = Astro.props;
import ArrowRight from './icon/ArrowRight.astro';
import Area from './icon/Area.astro';
import Cama from './icon/Cama.astro';
import Ducha from './icon/Ducha.astro';
---

<div id="carousel" class="h-full w-[400px] m-2 flex-shrink-0 cursor-pointer">
  <div class="rounded-3xl overflow-hidden mb-4 h-[250px] img-brillo">
    <img src={`/img/propiedades/propiedad-${propiedad.id}.png`} alt={propiedad.id} />
    <span
      class="absolute flex gap-2 top-3 left-4 border border-white text-xs rounded-xl px-4 py-2 font-semibold hover:bg-white hover:text-black"
    >
      Detalles
      <ArrowRight />
    </span>
  </div>
  <div class="p-4 flex flex-col gap-4">
    <div class="flex gap-4 border-b-[1px] border-gray-400 pb-5">
      <div class="flex gap-2">
        <Cama class="text-slate-700 size-12" />
        <h5 class="text-xs text-slate-700 leading-7 whitespace-normal">
          Habitaciones:
          <strong> {propiedad.habitaciones}</strong>
        </h5>
      </div>
      <div class="flex gap-2">
        <Ducha class="text-slate-700 size-12" />
        <h5 class="text-xs text-slate-700 leading-7 whitespace-normal">
          Baños:
          <strong>{propiedad.baños}</strong>
        </h5>
      </div>
      <div class="flex gap-2">
        <Area class="text-slate-700 size-12" />
        <h5 class="text-xs text-slate-700 leading-7 whitespace-normal">
          Superficie:
          <strong>{propiedad.superficie}</strong>
        </h5>
      </div>
    </div>
  </div>
  <div class="flex flex-col px-2 text-slate-700">
    <h6 class="text-2xl capitalize font-semibold">{propiedad.tipo}</h6>
    <span class="text-lg">${propiedad.precio} USD</span>
    <span>{propiedad.localidad}, {propiedad.provincia}</span>
  </div>
</div>
<style>
  .img-brillo {
    position: relative;
  }

  .img-brillo:after {
    position: absolute;
    top: 0;
    left: -75%;
    z-index: 2;
    display: block;
    content: '';
    width: 50%;
    height: 100%;
    background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.3) 100%);
    transform: skewX(-20deg);
  }

  .img-brillo:hover:after {
    animation: imgBrillo 1s;
  }

  @keyframes imgBrillo {
    100% {
      left: 125%;
    }
  }
</style>
